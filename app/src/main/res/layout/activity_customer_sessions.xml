<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bignerdranch.android.getfit.CustomerSessions"
    android:background="#a8c4ee"
    android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer Sessions"
        android:id="@+id/textView_sessions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#2b70de"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Customer Name"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_marginTop="50dp"
        android:textColor="#2b70de"
        android:layout_below="@+id/textView_sessions"
        android:layout_alignLeft="@+id/textView_sessions"
        android:layout_alignStart="@+id/textView_sessions"
        android:background="#cbc9c9"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button_search"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editText_name"
        android:layout_centerHorizontal="true"
        android:background="#2b70de"
        android:textColor="#a8c4ee"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button_search"
        android:layout_centerHorizontal="true"
        android:background="#cbc9c9"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mark Completed"
        android:id="@+id/textView_completed"
        android:textColor="#2b70de"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/checkBox_completed"
        android:layout_toStartOf="@+id/checkBox_completed"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_completed"
        android:layout_alignBottom="@+id/textView_completed"
        android:layout_toRightOf="@+id/button_search"
        android:layout_toEndOf="@+id/button_search"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Billing"
        android:id="@+id/button"
        android:background="#2b70de"
        android:textColor="#a8c4ee"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView_completed"
        android:layout_toEndOf="@+id/textView_completed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Session"
        android:id="@+id/button_newSession"
        android:background="#2b70de"
        android:textColor="#a8c4ee"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"/>
</RelativeLayout>
