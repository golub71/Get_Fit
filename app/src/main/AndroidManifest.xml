<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bignerdranch.android.getfit"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".User"
            android:label="@string/title_activity_user">
            <intent-filter>
                <action android:name="com.bignerdranch.android.getfit.User"/>

                <category android:name="android.intent.category.default"/>
            </intent-filter>
        </activity>
        <activity android:name=".NewCustomer">
        </activity>
        <activity android:name=".TakePhoto">
        </activity>
        <activity android:name=".CustomerSessions">
        </activity>
        <activity android:name=".CustomerBilling">
        </activity>
    </application>

</manifest>
